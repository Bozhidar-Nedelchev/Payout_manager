<h1>Merchants</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Active</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <% @merchants.each do |merchant| %>
      <tr>
        <td><%= merchant.name %></td>
        <td><%= merchant.active ? 'Yes' : 'No' %></td>
        <td>
          <%= link_to "Show", admin_merchant_path(merchant) %>
          <%= link_to "Edit", edit_admin_merchant_path(merchant) %>
          <%= link_to "Delete", admin_merchant_path(merchant), method: :delete, data: { confirm: "Are you sure?" } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "New Merchant", new_admin_merchant_path %>
