<h1>Countries</h1>

<p>
  <%= link_to 'New Country', new_admin_country_path %>
</p>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Currency</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @countries.each do |country| %>
      <tr>
        <td><%= country.name %></td>
        <td><%= country.currency %></td>
        <td><%= link_to 'Show', admin_country_path(country) %></td>
        <td><%= link_to 'Edit', edit_admin_country_path(country) %></td>
        <td><%= link_to 'Destroy', admin_country_path(country), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Back', admin_root_path %>
