<h1>Cards</h1>
<table>
  <thead>
    <tr>
      <th>Status</th>
      <th>Product</th>
      <th>Amount</th>
      <th>Activation Number</th>
      <!-- Add more table headers for other attributes -->
    </tr>
  </thead>
  <tbody>
    <% @cards.each do |card| %>
      <tr>
        <td><%= card.status %></td>
        <td><%= card.product.name %></td>
        <td><%= number_to_currency(card.amount) %></td>
        <td><%= card.activation_number %></td>
        <!-- Display other attributes as needed -->
      </tr>
    <% end %>
  </tbody>
</table>

